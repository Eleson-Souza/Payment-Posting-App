<%- include('../partials/header.ejs') %>

<%- include('../partials/navbar.ejs') %>

<div class="container">
    <div class="card mt-3">
        <div class="card-header">
            <h2>Atualização de pagamento</h2>
        </div>
        <div class="card-body">

            <form action="/edit-payment/<%= payment.id %>" method="post">
                <div class="form-group">
                    <label for="title">Título</label>
                    <input 
                        type="text" 
                        name="title" 
                        id="title" 
                        placeholder="Dê um título para o pagamento" 
                        class="form-control" 
                        value="<%= payment.title %>"
                    />
                </div>

                <div class="form-group">
                    <label for="value">Valor</label>
                    <input 
                        type="text" 
                        name="value" 
                        id="value" 
                        placeholder="Valor em R$" 
                        class="form-control" 
                        value="<%= payment.value %>"
                    />
                </div>

                <div class="form-group">
                    <label for="date_payment">Data</label>
                    <input 
                        type="text" 
                        name="date_payment" 
                        id="date_payment" 
                        class="form-control" 
                        placeholder="Dia/Mês/Ano"
                        value="<%= payment.date_payment %>"
                    />
                </div>

                <div class="form-group">
                    <label for="tax">Imposto</label>
                    <input 
                        type="number" 
                        name="tax" 
                        id="tax"
                        class="form-control" 
                        readonly
                        value="<%= payment.tax %>"
                    />
                </div>

                <div class="form-group">
                    <label for="comments">Comentários</label>
                    <textarea 
                        name="comments" 
                        id="comments" 
                        class="form-control"
                    ><%= payment.comments %></textarea>
                </div>

                <div class="form-group">
                    <button type="reset" class="btn btn-danger">Limpar</button>
                    <button type="submit" class="btn btn-warning">Atualizar pagamento</button>
                </div>
            </form>

        </div>
    </div>
</div>



<%- include('../partials/footer.ejs') %>